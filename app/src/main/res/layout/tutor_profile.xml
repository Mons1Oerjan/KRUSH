<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.dal.krush.TutorProfileFragment"
    android:id="@+id/tutor_profile">

    <TextView
        android:id="@+id/tutorProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Profile" />

    <TextView
        android:id="@+id/tutorNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="48dp"
        android:text="Name:"
        android:layout_below="@+id/tutorProfilePicture"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tutorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tutorNameLabel"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/tutorNameLabel"
        android:text="Firstname Lastname" />

    <TextView
        android:id="@+id/tutorEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Email:"
        android:layout_below="@+id/tutorNameLabel"
        android:layout_alignStart="@+id/tutorNameLabel" />

    <TextView
        android:id="@+id/tutorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tutorName"
        android:layout_alignTop="@+id/tutorEmailLabel"
        android:text="email@email.com" />

    <TextView
        android:id="@+id/tutorSchoolLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="School:"
        android:layout_below="@+id/tutorEmailLabel"
        android:layout_alignStart="@+id/tutorEmailLabel" />

    <TextView
        android:id="@+id/tutorSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tutorSchoolLabel"
        android:layout_alignStart="@+id/tutorEmail"
        android:text="SchoolName" />

    <ImageView
        android:id="@+id/tutorProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/tutorProfileTitle"
        android:layout_alignStart="@+id/tutorProfileTitle" />

    <Button
        android:id="@+id/tutorEditProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tutorSchoolLabel"
        android:layout_below="@+id/tutorSchoolLabel"
        android:layout_marginTop="66dp"
        android:text="Edit Profile" />

</RelativeLayout>
