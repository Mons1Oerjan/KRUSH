<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.dal.krush.studentFragments.StudentBookingFragment">

    <TextView
        android:id="@+id/bookingTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book a Tutor"
        android:textColor="@color/colorPrimary"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <ListView
        android:id="@+id/availableTutorsListView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/filterByCoursesSwitch"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/filterByCoursesSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter By Your School"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/bookingTitleLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

</RelativeLayout>
