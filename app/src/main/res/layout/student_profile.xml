<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.dal.krush.StudentProfileFragment"
    android:id="@+id/student_profile">

    <TextView
        android:id="@+id/studentProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Profile" />

    <TextView
        android:id="@+id/studentNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="48dp"
        android:text="Name:"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentNameLabel"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/studentNameLabel"
        android:text="Firstname Lastname" />

    <TextView
        android:id="@+id/studentEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Email:"
        android:layout_below="@+id/studentNameLabel"
        android:layout_alignStart="@+id/studentNameLabel" />

    <TextView
        android:id="@+id/studentEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentName"
        android:layout_alignTop="@+id/studentEmailLabel"
        android:text="email@email.com" />

    <TextView
        android:id="@+id/studentSchoolLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="School:"
        android:layout_below="@+id/studentEmailLabel"
        android:layout_alignStart="@+id/studentEmailLabel" />

    <TextView
        android:id="@+id/studentSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/studentSchoolLabel"
        android:layout_alignStart="@+id/studentEmail"
        android:text="SchoolName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/studentProfileTitle"
        android:layout_alignStart="@+id/studentProfileTitle" />

    <Button
        android:id="@+id/studentEditProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentSchoolLabel"
        android:layout_below="@+id/studentSchoolLabel"
        android:layout_marginTop="66dp"
        android:text="Edit Profile" />

</RelativeLayout>
